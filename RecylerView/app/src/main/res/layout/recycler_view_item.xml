<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/card_view_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/card_view_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/magnifica_70_card_view_logo"
                android:contentDescription="@string/card_view_image_content_description" />
            <TextView
                android:id="@+id/card_view_image_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:text="@string/card_view_title"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="#60000000"
                fontPath="fonts/Roboto-Regular.ttf"/>
        </FrameLayout>

        <TextView
            android:id="@+id/card_view_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/card_view_description"
            android:ellipsize="middle"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            fontPath="fonts/Roboto-Regular.ttf"/>

        <TextView
            android:id="@+id/card_view_show_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/card_view_show_more"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            fontPath="fonts/Roboto-Regular.ttf"/>
    </LinearLayout>


</android.support.v7.widget.CardView>